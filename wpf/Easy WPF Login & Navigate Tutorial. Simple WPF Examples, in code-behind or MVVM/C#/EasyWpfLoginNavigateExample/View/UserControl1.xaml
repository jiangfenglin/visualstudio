<UserControl x:Class="EasyWpfLoginNavigateExample.View.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="Azure">
        <Ellipse Stroke="Black" StrokeThickness="3"/>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="2" BorderBrush="Black" CornerRadius="5" Background="Beige">
            <TextBlock Text="My new control! :D" Margin="20"/>
        </Border>
        <TextBlock Text="{Binding InputValue}" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
