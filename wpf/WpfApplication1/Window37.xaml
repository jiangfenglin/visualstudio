<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="WpfApplication1.Window37"
	x:Name="Window"
	Title="Window37"
	Width="318" Height="213" WindowStyle="ToolWindow">
    <Window.Background>
    	<LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
    		<GradientStop Color="#FF3466A1" Offset="0.266"/>
    		<GradientStop Color="White" Offset="0.996"/>
    	</LinearGradientBrush>
    </Window.Background>
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="58" />
            <RowDefinition Height="48" />
            <RowDefinition Height="68" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Height="30" Width="200" Margin="5" Template="{DynamicResource TextBoxBaseControlTemplate1}"></TextBox>
        <TextBox Grid.Row="1" Height="30" Width="200" Margin="5" Template="{DynamicResource TextBoxBaseControlTemplate1}"></TextBox>
        <Button Content="TEST" Grid.Row="2" HorizontalAlignment="Center" Width="150" Height="30" BorderThickness="3" ClickMode="Release" />
    </Grid>
</Window>